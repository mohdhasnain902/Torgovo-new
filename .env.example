# Django Configuration
SECRET_KEY=your-django-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DB_NAME=crypto_trading
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_HOST=localhost
DB_PORT=5432

# Security
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379/1

# Webhook Security
WEBHOOK_SECRET_LENGTH=32
WEBHOOK_RATE_LIMIT=10
WEBHOOK_ALLOWED_IPS=  # Comma-separated list if needed
ENABLE_WEBHOOK_SIGNATURE=false

# Exchange API Settings (Users will store their individual keys)
# These are global settings for the platform
BINANCE_API_URL=https://api.binance.com
BINANCE_TESTNET_URL=https://testnet.binance.vision
BYBIT_API_URL=https://api.bybit.com
BYBIT_TESTNET_URL=https://testnet.bybit.com
KRAKEN_API_URL=https://api.kraken.com
MEXC_API_URL=https://api.mexc.com
MEXC_TESTNET_URL=https://api.testnet.mexc.com

# Trading Settings
MAX_ORDER_SIZE=10000.0
MIN_ORDER_SIZE=10.0
DEFAULT_LEVERAGE=1

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=True

# Monitoring (Optional)
SENTRY_DSN=  # Your Sentry DSN for error tracking

# Application URLs
BASE_URL=https://yourdomain.com
FRONTEND_URL=https://your-frontend-domain.com

# File Storage
MEDIA_ROOT=/path/to/media
STATIC_ROOT=/path/to/static

# Feature Flags
ENABLE_REAL_TRADING=False  # Set to True for live trading
ENABLE_ADVANCED_ANALYTICS=True
ENABLE_PAPER_TRADING=True

# Rate Limiting
API_RATE_LIMIT=100  # requests per hour per user
WEBHOOK_RATE_LIMIT=10  # requests per minute per webhook

# Performance
CONN_MAX_AGE=60
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security Headers
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY